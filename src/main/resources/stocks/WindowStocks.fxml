<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootBorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stocks.WindowStocksController">
    <center>
        <GridPane fx:id="gridPane" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="50.0" minWidth="10.0" prefWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="1180.0" prefWidth="1180.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="535.0" vgrow="SOMETIMES" />
            </rowConstraints>
         <children>
            <GridPane GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="51.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="51.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="433.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" GridPane.rowIndex="2" />
                  <GridPane fx:id="controlsGridPane">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TextField fx:id="nameTextField" promptText="Найменування" />
                        <TextField fx:id="priceTextField" promptText="Вартість" GridPane.columnIndex="2" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonAction" text="Зберегти" GridPane.columnIndex="4" />
                        <Button fx:id="escapeButton" mnemonicParsing="false" onAction="#escapeButtonAction" text="Скасувати" GridPane.columnIndex="5" />
                        <ComboBox fx:id="repositoryComboBox" prefWidth="150.0" promptText="Виберіть склад" GridPane.columnIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </GridPane>
         </children>
        </GridPane>
    </center>
</BorderPane>
