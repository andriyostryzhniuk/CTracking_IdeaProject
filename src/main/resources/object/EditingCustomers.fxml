<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Group fx:id="rootGroup" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="object.EditingCustomersController">
    <children>
        <Rectangle arcHeight="15.0" arcWidth="15.0" fill="#0000008c" height="162.0" stroke="#ffffffe5"
                   strokeType="INSIDE" strokeWidth="1.5" width="300.0"/>
        <GridPane alignment="CENTER" prefHeight="162.0" prefWidth="300.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane fx:id="controlsGridPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <children>
                        <GridPane alignment="CENTER" GridPane.rowIndex="1">
                            <children>
                                <Button fx:id="closeButton" maxHeight="25.0" maxWidth="72.0" minHeight="25.0"
                                        minWidth="72.0" mnemonicParsing="false" onAction="#closeButtonAction"
                                        prefHeight="25.0" prefWidth="72.0" text="Закрити" GridPane.columnIndex="2"/>
                                <Button fx:id="addButton" maxHeight="25.0" maxWidth="72.0" minHeight="25.0"
                                        minWidth="72.0" mnemonicParsing="false" onAction="#saveButtonAction"
                                        prefHeight="25.0" prefWidth="72.0" text="Зберегти" GridPane.columnIndex="1">
                                    <GridPane.margin>
                                        <Insets right="3.0"/>
                                    </GridPane.margin>
                                </Button>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="77.0" minWidth="77.0"
                                                   prefWidth="77.0"/>
                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="72.0" minWidth="72.0"
                                                   prefWidth="72.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="25.0" valignment="TOP" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                        <TextField fx:id="textField" promptText="Введіть замовника"/>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="250.0" prefWidth="250.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="35.0" prefHeight="35.0" valignment="BOTTOM" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </children>
        </GridPane>
        <Pane prefHeight="52.0" prefWidth="300.0">
            <children>
                <Label fx:id="titleLabel" layoutX="20.0" layoutY="11.0" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
        <Label fx:id="exceptionLabel" layoutX="25.0" layoutY="30.0" text="Назва містить неприпустимі символи"
               textFill="#f5e507" visible="false">
            <font>
                <Font name="System Italic" size="13.0"/>
            </font>
        </Label>
    </children>
</Group>
